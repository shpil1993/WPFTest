                <DataGridTextColumn Header="{Binding Company}" Binding="{Binding Company}"/>
                <DataGridTextColumn Header="{Binding Greeting}" Binding="{Binding Greeting}"/>
                <DataGridTextColumn Header="{Binding Title}" Binding="{Binding Title}"/>
                <DataGridTextColumn Header="{Binding FirstName}" Binding="{Binding FirstName}"/>
                <DataGridTextColumn Header="{Binding LastName}" Binding="{Binding LastName}"/>
                <DataGridTextColumn Header="{Binding Street}" Binding="{Binding Street}"/>
                <DataGridTextColumn Header="{Binding Country}" Binding="{Binding Country}"/>
                <DataGridTextColumn Header="{Binding PostalCode}" Binding="{Binding PostalCode}"/>
                <DataGridTextColumn Header="{Binding City}" Binding="{Binding City}"/>
                <DataGridTextColumn Header="{Binding Phone}" Binding="{Binding Phone}"/>
                <DataGridTextColumn Header="{Binding Birthday}" Binding="{Binding Birthday}"/>
